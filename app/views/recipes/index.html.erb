
<div class=<%= 'center' %> >
<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>

<p>No recipes, Sorry ...</p>

<% else %>
<table border="0">
  <tr class=<%= 'tabletitle' %> >
  	<th>Image</th>
  	<th>Name</th>
  	<th>Description</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %> >
      <td><%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["f2f_url"], target: "_blank"%></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["source_url"], target: "_blank" %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
<% end %>
</div>
