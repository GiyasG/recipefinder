
<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>

<p>No recipes, Sorry ...</p>

<% else %>
<div class="center">
<table border="0">
  <tr>
  	<th>Image</th>
  	<th>Name</th>
  	<th>Description</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %> >
      <td><%= link_to image_tag(recipe["image_url"]), recipe["f2f_url"]%></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
</div>
<% end %>
